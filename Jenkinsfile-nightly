pipeline {
    agent any

    triggers {
        cron('H 1 * * *')   // Daily 1 AM
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Setup venv') {
            steps {
                sh '''
                python3 -m venv venv
                . venv/bin/activate
                pip install -r requirements.txt
                '''
            }
        }

        stage('Unit Tests') {
            steps {
                sh '''
                . venv/bin/activate
                pytest -m "not slow"
                '''
            }
        }

        stage('Long Running Tests') {
            timeout(time: 1, unit: 'HOURS') {
                steps {
                    sh '''
                    . venv/bin/activate
                    pytest -m slow
                    '''
                }
            }
        }
    }

    post {
        success {
            echo "✅ NIGHTLY BUILD SUCCESS"
        }
        failure {
            echo "❌ NIGHTLY BUILD FAILED"
        }
    }
}
